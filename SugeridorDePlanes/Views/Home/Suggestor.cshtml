                                        @if (@indexModel.BillingStatus.ToString().Equals("Higher"))
                                        {
                                            <div class="superiorBillingMain">
                                                <div class="superiorBillingChild">
                                                    <i class="fa fa-check-circle fa-lg" aria-hidden="true"> <span class="spanSatus">Facturación superior </span></i>

                                                </div>
                                            </div>
                                        }

                                        else if (@indexModel.BillingStatus.ToString().Equals("Lower"))
                                        {
                                            <div class="lowerBillingMain">
                                                <div class="lowerBillingChild">
                                                    <div style="font-weight:bold; color:#FF0000">
                                                        <i class="fa fa-times fa-lg" aria-hidden="true"><span class="spanSatus"> Facturación inferior</span></i>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else if (@indexModel.BillingStatus.ToString().Equals("Equal"))
                                        {
                                            <div class="equalBillingMain">
                                                <div class="equalBillingMainChild">
                                                    <div style="font-weight:bold; color:#FFD200">
                                                        <i class="fa fa-exclamation-circle fa-lg" aria-hidden="true"><span class="spanSatus"> Misma facturación</span></i>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }

                                    else
                                    {

                                        <div id="divClaculatedBillingStatus">
                                            <div class="emptyBillingDataMain">
                                                <div class="emptyBillingDataChild">
                                                    <div style="font-weight:bold; color:#666666">
                                                        Sin datos
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div id="valuesResumen" class="p-2">
                                    @if (indexModel != null)
                                    {
                                        <label><b>GAP Fijo: </b></label><label class="ml-1" id="gapValue">$ @FormatCultureNumber(indexModel.FixedGap)</label><br />
                                        <label><b>GAP Facturación: </b></label><label class="ml-1" id="gapBilingValue">$ @FormatCultureNumber(indexModel.BillingGap)</label><br />
                                    }
                                    else
                                    {
                                        <label><b>GAP Fijo: </b></label><label class="ml-1" id="gapValue">$ 0</label><br />
                                        <label><b>GAP Facturación: </b></label><label class="ml-1" id="gapBilingValue">$ 0</label><br />
                                    }
                                    <label><b>Subsidio: </b></label><label class="ml-1" id="calulatedSubsidy"></label><br />
                                    <label><b>Payback: </b></label><label class="ml-1" id="calulatedPayBack"></label><br />
                                    <label><b>Ingreso: </b></label><label class="ml-1" id="calulatedIncome"></label><br />

                                </div>
                            </div>



                            <div class="col-lg-4 align-items-center dis-grid justify-content-center" id="generarDiv">

                                <div style="display: table-cell;vertical-align: middle;text-align: center;">
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        <button class="btn btn-outline-success generateButtons my-2 my-sm-0 p-3" type="submit" id="generarProposalBtn" onclick="generarProposal()">Generar Propuesta</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-success generateButtons my-2 my-sm-0 p-3" disabled type="submit" id="generarProposalBtn">Generar Propuesta</button>
                                    }

                                </div>



                            </div>


                        </div>
                        @if (Model != null && Model.Count > 0)
                        {
                            <button style="position: absolute;right:190px;top:-5px;outline:5px solid #fff" id="saveProposalBtn" onclick="saveProposal()">
                                <img src="@Url.Content("~/img/icons/disketteIcon32x.png")" />
                            </button>
                            <button style="position: absolute;right:130px;top:-5px;outline:5px solid #fff" id="exportPdfBtn" onclick="exportPdf()">
                                <img src="@Url.Content("~/img/icons/IconPdf.png")" />
                            </button>
                            <button style="position: absolute;right:70px;top:-5px;outline:5px solid #fff" id="sendEmailBtn" onclick="openEmailModal()">
                                <img src="@Url.Content("~/img/icons/iconMail.png")" />
                            </button>
                            <button style="position: absolute;right:10px;top:-5px;outline:5px solid #fff" id="calculatIndexesBtn" onclick="alternateBugdetFields(1)">
                                <img src="@Url.Content("~/img/icons/calculatorIcon32x.png")" />
                            </button>
                        }
                        else
                        {
                            <button disabled style="position: absolute;right:190px;top:-5px;cursor:no-drop;" id="saveProposalBtn" onclick="saveProposal()">
                                <img src="@Url.Content("~/img/icons/disketteIcon32x.png")" />
                            </button>
                            <button disabled style="position: absolute;right:130px;top:-5px;cursor:no-drop;" id="exportPdfBtn" onclick="exportPdf()">
                                <img src="@Url.Content("~/img/icons/IconPdf.png")" />
                            </button>
                            <button disabled style="position: absolute;right:70px;top:-5px;cursor:no-drop;" id="sendEmailBtn" onclick="openEmailModal()">
                                <img src="@Url.Content("~/img/icons/iconMail.png")" />
                            </button>
                            <button disabled style="position: absolute;right:10px;top:-5px;cursor:no-drop;" id="calculatIndexesBtn" onclick="alternateBugdetFields(1)">
                                <img src="@Url.Content("~/img/icons/calculatorIcon32x.png")" />
                            </button>
                        }
                    </fieldset>

                </div>

                <div class="col-lg-7" style="display:none" id="calculateDiv">
                    <fieldset>
                        <legend> Simulación </legend>
                        <div class="row" style="height: 250px">

                            <div class="col-lg-4">
                                <div class="ml-3">
                                    <div class="input-group-prepend ">
                                        <button class="btn btn-outline-success calculateButtons" type="button" onclick="calculateIndexes(1)">Subsidio</button>
                                    </div>
                                    <input type="text" id="calculateSubsidyTxt" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                    <div class="input-group-prepend">
                                        <button class="btn btn-outline-success calculateButtons" type="button" onclick="calculateIndexes(2)">Payback</button>
                                    </div>
                                    <input type="text" id="calculatePaybackTxt" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                    <div class="input-group-prepend">
                                        <button class="btn btn-outline-success calculateButtons" type="button" onclick="calculateIndexes(3)">Ingreso</button>
                                    </div>
                                    <input type="text" id="calculateIncomeTxt" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">

                                </div>

                            </div>


                            <div class="col-lg-4 align-items-center dis-grid justify-content-center factDiv">


                                <div id="divClaculatedBillingStatus">
                                    <div class="emptyBillingDataMain">
                                        <div class="emptyBillingDataChild">
                                            <div style="font-weight:bold; color:#666666">
                                                Sin datos
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div id="valuesResumen" class="p-2">
                                    <label><b>GAP Fijo: </b></label><label class="ml-1" id="gapCalculatedValue">Sin calcular </label><br />
                                    <label><b>GAP Facturación: </b></label><label class="ml-1" id="gapBilingCalculatedValue">Sin calcular</label><br />

                                    <div id="incomeDivValue" style="display:none">@incomeAmount</div>
                                    <div id="billingDivValue" style="display:none">@billingAmount</div>
                                    @if (indexModel != null)
                                    {
                                        <div id="tmmPrestasionDivValue" style="display:none"> @indexModel.TmmPrestacion</div>
                                    }

                                </div>
                            </div>

                            <div class="col-lg-4 align-items-center dis-grid justify-content-center generarDiv">

                                <div style="display: table-cell;vertical-align: middle;text-align: center;">
                                    <button class="btn btn-outline-success generateButtons my-2 my-sm-0 p-3" type="submit" id="importValuesBtn" onclick="importValues()">Importar valores</button>
                                    <button class="btn btn-outline-success generateButtons my-2 my-sm-0 p-3" type="submit" id="resetValuesBtn" onclick="resetValues()">Resetear valores</button>
                                </div>
                            </div>
                        </div>
                        <button style="position: absolute;right:10px;top:-5px;outline:5px solid #fff" id="calculatIndexesBtn" onclick="alternateBugdetFields(2)">
                            <img src="@Url.Content("~/img/icons/budgetIcon32x.png")" />
                        </button>
                    </fieldset>
                </div>

            </div>


            @if (Model != null && Model.Count() > 4)
            {
                <script>
                    $(".tableFieldset .tableFixHead").css("height", "230px");
                </script>
            }


            <div class="modal fade" id="plansModal" role="dialog">
                <div class="modal-dialog">

                    <div class="modal-content">

                        <div class="modal-header d-flex justify-content-center" style="background-color:#2bcb73">
                            <h2 style="color:white;text-shadow: 2px 2px #25af60">Seleccione un plan</h2>

                        </div>

                        <div class="modal-body">
                            <table id="tablaPlanes" class="tablesorter" style="margin: 0 auto">
                                <thead style="text-align:center">
                                    <tr>
                                        <th>Plan</th>
                                        <th>TMM</th>
                                        <th>Bono  </th>
                                        <th>Roaming</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var plan in planOfertList.Select((value) => new { value }))
                                    {
                                        var bono = @plan.value.Bono_ / 1024;

                                        var roaming = string.Empty;
                                        if (plan.value.Roaming.Length >= 20)
                                        {
                                            roaming = plan.value.Roaming.Substring(0, 20) + "...";
                                        }
                                        else
                                        {
                                            roaming = plan.value.Roaming;
                                        }


                                        <tr>
                                            <td>@plan.value.Plan</td>
                                            <td data-toggle="tooltip" data-placement="top" title="$ @FormatCultureNumber(plan.value.TMM_s_iva)">$ @plan.value.TMM_s_iva</td>
                                            <td>@bono Gb</td>
                                            <td data-toggle="tooltip" data-placement="top" title="@plan.value.Roaming">@roaming</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-success" onclick="confirmSelectPlan()" data-dismiss="modal">Seleccionar</button>

                        </div>
                    </div>

                </div>
            </div>


            <div class="modal fade" id="emailModal" role="dialog">
                <div class="modal-dialog">

                    <div class="modal-content">
                        <div class="modal-header d-flex justify-content-center" style="background-color:#2bcb73">
                            <h2 style="color:white;text-shadow: 2px 2px #25af60">Enviar email</h2>

                        </div>

                        <div class="form-group" style="padding:0 10px 0 10px; width: 50%">
                            <h5 for="toTxt">Para</h5>
                            <input type="email" class="form-control" id="toTxt" placeholder="nombre@dominio.com">
                            <span style="display:none" class="text-danger">Email requerido</span>
                        </div>

                        <div class="form-group" style="padding:0 10px 0 10px; width: 50%">
                            <h5 for="subjectTxt">Asunto</h5>
                            <input type="email" class="form-control" id="subjectTxt">
                            <span style="display:none" class="text-danger">Asunto requerido</span>
                        </div>

                        <div class="form-group" style="padding:10px">
                            <h5 for="bodytxt">Mensaje</h5>
                            <textarea class="form-control" id="bodytxt" rows="3"></textarea>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-success" onclick="sendMail()" data-dismiss="modal">Enviar</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="modalPush" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-notify modal-info modal-dialog-centered" role="document">

                    <div class="modal-content text-center">

                        <div class="modal-header d-flex justify-content-center" style="background-color:#2bcb73">
                            <h2 style="color:white;text-shadow: 2px 2px #25af60">Propuesta guardada</h2>

                        </div>
                        <div class="modal-body">

                            <img src="@Url.Content("~/img/icons/check1.png")" />

                            <h4 id="saveProposaltext">La propuesta se guardó exitosamente!</h4>

                        </div>

                        <div class="modal-footer flex-center">
                            <button type="button" class="btn btn-outline-success" data-dismiss="modal">aceptar</button>
                        </div>
                    </div>
                </div>
            </div>


            <div class="modal fade" id="mobilesModal" role="dialog">
                <div class="modal-dialog">

                    <div class="modal-content">

                        <div class="modal-header d-flex justify-content-center" style="background-color:#2bcb73">
                            <h2 style="color:white;text-shadow: 2px 2px #25af60">Seleccione un equipo</h2>

                        </div>

                        <div class="modal-body">
                            <table id="tableMobiles" class="tablesorter">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marca</th>
                                        <th>Modelo</th>
                                        <th>Landed </th>
                                        @*<th>Stock</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var mobile in movileDevices)
                                    {
                                        var mobileName = string.Empty;
                                        if (mobile.Nombre.Length >= 15)
                                        {
                                            mobileName = mobile.Nombre.Substring(0, 15) + "...";
                                        }
                                        else
                                        {
                                            mobileName = mobile.Nombre;
                                        }

                                        <tr>
                                            <td>@mobile.Id</td>
                                            <td data-toggle="tooltip" data-placement="top" title="@mobile.Marca @mobile.Nombre">
                                                @mobile.Marca

                                            </td>
                                            <td data-toggle="tooltip" data-placement="top" title="@mobile.Marca @mobile.Nombre">
                                                @mobileName
                                            </td>
                                            <td data-toggle="tooltip" data-placement="top" title="$ @FormatCultureNumber(mobile.PrecioSinIva)">$ @mobile.PrecioSinIva</td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="modal-footer">

                            <button type="button" class="btn btn-outline-success" onclick="confirmSelectedMobile()" data-dismiss="modal">Seleccionar</button>
                        </div>
                    </div>

                </div>
            </div>



            <script src="~/js/Sugeridor/SugeridorScripts.js"></script>
        </div>
    </div>
</body>
</html>
