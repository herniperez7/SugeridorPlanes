                        <legend>Terminales</legend>
                        <div class="row" style="height: 250px">
                            <div class="col-lg-5">

                                <form class="form-inline input-group mb-0 w-auto" action="/Suggestor/ShowPlans" method="post">

                                    <select id="movilesDdl" class="custom-select" onchange="movileChange()">

                                        <option> </option>
                                        @foreach (var item in movileDevices)
