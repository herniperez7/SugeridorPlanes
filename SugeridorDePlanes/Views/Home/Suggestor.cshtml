                                            {
                                                decimal totalAmount = 0;
                                                int deviceCount = 0;

                                                @foreach (var mobile in mobileList)
                                                {
                                                    var mobileName = mobile.Marca + " " + mobile.Nombre;
                                                    if (mobileName.Length > 20)
                                                    {
                                                        mobileName = mobileName.Substring(0, 15) + "...";
                                                    }

