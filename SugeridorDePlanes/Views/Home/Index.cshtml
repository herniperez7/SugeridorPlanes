@{
    var usuario = ViewData["UsuarioLogueado"] as Telefonica.SugeridorDePlanes.Models.Usuarios.Usuario;
    var emptyPlans = true;

    if (Model != null && Model.Count() > 0)
    {
        emptyPlans = false;

    }

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var clientList = ViewData["clientList"] as List<Telefonica.SugeridorDePlanes.Models.ApiModels.SugeridorClientesModel>;
    var movileDevices = ViewData["movileDevices"] as List<Telefonica.SugeridorDePlanes.Models.ApiModels.EquipoMovil>;
    var planOfertList = ViewData["planOfertList"] as List<Telefonica.SugeridorDePlanes.Models.ApiModels.PlanOfertaActualModel>;
    var planDefList = ViewData["planDefList"] as List<Telefonica.SugeridorDePlanes.Models.ApiModels.PlanDefinitivolModel>;
    var recomendadorOptions = new SelectList(clientList, "Documento", "Titular");
    var gapModel = ViewData["gaps"] as Telefonica.SugeridorDePlanes.Models.ApiModels.GapModel;


}

@model List<Telefonica.SugeridorDePlanes.Models.ApiModels.RecomendadorB2bModel>;

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Home/HomeStyles.css" />
</head>
<body>
    <script>
        var gbUpdateDefinitivePlanUrl = "@Url.Action("UpdateDefinitivePlan")";
        var gbGetMovilInfoUrl = "@Url.Action("GetMovilInfo", "Home")";
        var gbAddMovilDecivesUrl = "@Url.Action("AddMovilDevice", "Home")";
        var gbDeleteMovilUrl = "@Url.Action("DeleteMovilFromList", "Home")";
        var gbCalculatePayBack = "@Url.Action("CalculatePayback", "Home")";
        var gbCalculateGap = "@Url.Action("CalculateGapResult", "Home")";
        var gbGetMovilListUrl = "@Url.Action("GetMovilList", "Home")";

    </script>

    <nav class="d-none d-md-flex navbar-light bg-light justify-content-between pt-2 pb-2 mr-3 ml-3">


        <form class="form-inline input-group mb-0 w-auto" action="/Home/ShowPlans" method="post">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Razon Social</label>
            </div>
            @Html.DropDownList("rut", recomendadorOptions, new { onChange = "this.form.submit()", @class = "custom-select" })

        </form>


        <form class="form-inline mb-0" action="/Home/ShowPlans" method="post">
            <div class="d-inline-flex align-items-center w-100">
                <input class="form-control mr-2" type="text" name="rut" id="clientRutTxt1" placeholder="Buscar por Rut" aria-label="Search">

                <button class="btn btn-outline-success my-2 my-sm-0" id="clientRutBtn" type="submit">Buscar</button>
            </div>
        </form>

        <form class="form-inline input-group mb-0 w-auto">
            <div class="input-group-prepend">
                <label class="input-group-text">Nombre Usuario</label>
            </div>
            <div class="input-group-prepend">
                <label class="input-group-text">Cerrar sesion</label>
            </div>
        </form>

    </nav>

    <nav class="d-block d-md-none navbar-light bg-light">

        <form class="form-inline input-group mb-0">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Razon social</label>
            </div>

            @Html.DropDownList("DropdownOptions", recomendadorOptions, new { @class = "custom-select" })


        </form>

        <form class="form-inline mb-0">
            <div class="d-inline-flex align-items-center w-100">
                <input class="form-control mr-2" type="search" id="clientRutTxt" placeholder="Buscar por Rut" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
            </div>

        </form>
    </nav>

    <div class="container-fluid pl-md-5 pr-md-5 pt-md-3">
        <div class="row">
            <div class="col-lg-6 col-sm-12 col-md-12">
                <fieldset class="tableFieldset">
                    <legend>Info actual de cliente</legend>
                    <div class="tableFixHead">
                        <table class="table table-bordered table-striped mb-0" style="border: 1px solid #ddd !important;">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Número</th>
                                    <th scope="col">Plan</th>
                                    <th scope="col">TMM (sin iva)</th>
                                    <th scope="col">Prestación codigo</th>
                                    <th scope="col">TMM Prestación (sin iva)</th>
                                    <th scope="col">Promedio facturado</th>
                                    <th scope="col">Consumo promedio de datos</th>
                                    <th scope="col">MOU OFFNET</th>
                                    <th scope="col">ROAMER</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!emptyPlans)
                                {
                                    decimal totalTmm = 0;
                                    decimal totalApruProm = 0;
                                    decimal totalConsumo = 0;
                                    decimal mouOffNet = 0;
                                    int roamerCount = 0;
                                    foreach (var plan in Model.Select((value) => new { value }))
                                    {
                                        totalTmm += (decimal)plan.value.TmmSinIva;
                                        totalApruProm += (decimal)plan.value.ArpuProm;
                                        totalConsumo += (decimal)@plan.value.MbTotalProm;
                                        mouOffNet += (decimal)@plan.value.MinutosVozOffProm;

                                        if (plan.value.Roamer.ToLower() == "roamer")
                                        {
                                            roamerCount++;
                                        }

                                        <tr>
                                            <td>@plan.value.Id</td>
                                            <td>@plan.value.Movil</td>
                                            <td>@plan.value.CodPlan</td>
                                            <td>$ @plan.value.TmmSinIva?.ToString("n")</td>
                                            <td>@plan.value.Prestacion1</td>
                                            <td>$ @plan.value.TmmPrestacionSinIva?.ToString("n")</td>
                                            <td>$ @plan.value.ArpuProm?.ToString("n")</td>
                                            <td>@plan.value.MbTotalProm Gb</td>
                                            <td>@plan.value.MinutosVozOffProm?.ToString("n")</td>

                                            @if (plan.value.Roamer.ToLower() == "roamer")
                                            {
                                                <td style="text-align:center">
                                                   
                                                    <svg class="bi bi-check" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                        <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3.5-3.5a.5.5 0 11.708-.708L6.5 10.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd" />
                                                    </svg>
                                                </td>
                                            }
                                            else
                                            {
                                        <td style="text-align:center">
                                            <svg class="bi bi-x" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 010 .708l-7 7a.5.5 0 01-.708-.708l7-7a.5.5 0 01.708 0z" clip-rule="evenodd" />
                                                <path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 000 .708l7 7a.5.5 0 00.708-.708l-7-7a.5.5 0 00-.708 0z" clip-rule="evenodd" />
                                            </svg>

                                        </td>
                                            }
                                        </tr>
                                    }

                                    <tr>
                                        <td class="total-column" colspan="3"></td>

                                        <td class="total-column">
                                            $ @totalTmm.ToString("n")
                                        </td>
                                        <td class="total-column" colspan="2"></td>
                                        <td class="total-column">
                                            $ @totalApruProm.ToString("n")
                                        </td>
                                        <td class="total-column">
                                            @totalConsumo Gb
                                        </td>
                                        <td class="total-column">
                                            @mouOffNet.ToString("n")
                                        </td>
                                        <td class="total-column">
                                            @roamerCount
                                        </td>

                                    </tr>
                                    <tr>
                                        <td class="total-billing-column" colspan="10">
                                            Facturación máxima: $@Model[0].ArpuRutMax?.ToString("n") (Fecha: @Model[0].FechaArpuRutMax)

                                        </td>

                                    </tr>

                                }
                                else
                                {
                                    <tr>
                                        <td class="total-column" colspan="10">
                                            Sin datos
                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </fieldset>

            </div>

            <div class="col-lg-3 col-md-6 col-sm-12">
                <fieldset class="tableFieldset">
                    <legend>Plan sugerido</legend>
                    <div class="tableFixHead">
                        <table class="table table-bordered table-striped mb-0" style="border: 1px solid #ddd !important;">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Plan sugerido</th>
                                    <th scope="col">TMM (sin iva)</th>
                                    <th scope="col">Datos del bono</th>
                                    <th scope="col">Roaming</th>


                                </tr>
                            </thead>
                            <tbody>
                                @if (!emptyPlans)
                                {
                                    decimal totalTmm = 0;
                                    decimal totalBono = 0;
                                    int roamingCount = 0;
                                    foreach (var plan in Model.Select((value) => new { value }))
                                    {
                                        totalTmm += (decimal)plan.value.TmmPlanSugerido;
                                        totalBono += (decimal)plan.value.BonoPlanSugerido / 1024;
                                        var bonoGb = plan.value.BonoPlanSugerido / 1024;

                                        if (plan.value.RoamingPlanSugerido.ToLower() != "no")
                                        {
                                            roamingCount++;
                                        }

                                        <tr id="@plan.value.Id{planSugerido}">
                                            <td>@plan.value.Id</td>
                                            <td>@plan.value.PlanSugerido</td>
                                            <td>$ @plan.value.TmmPlanSugerido?.ToString("n")</td>
                                            <td>@bonoGb Gb</td>
                                            <td>@plan.value.RoamingPlanSugerido</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="total-column" colspan="3">
                                            $ @totalTmm
                                        </td>
                                        <td class="total-column">
                                            @totalBono Gb
                                        </td>
                                        <td class="total-column">
                                            @roamingCount
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td class="total-column" colspan="5">
                                            Sin datos
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </fieldset>


            </div>

            <div class="col-lg-3 col-md-6 col-sm-12">
                <fieldset class="tableFieldset">
                    <legend>Plan definitivo</legend>
                    <div class="tableFixHead">
                        <table class="table table-bordered table-striped mb-0" id="tablaPlanesDefi" style="border: 1px solid #ddd !important;">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Plan sugerido</th>
                                    <th scope="col">TMM (sin iva)</th>
                                    <th scope="col">Datos del bono</th>
                                    <th scope="col">Roaming</th>
                                    <th scope="col">Editar</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (!emptyPlans)
                                {
                                    decimal totalTmm = 0;
                                    decimal totalBono = 0;
                                    int roamingCount = 0;
                                    @foreach (var plan in planDefList.Select((value, i) => new { value, i }))
                                    {
                                        totalTmm += (decimal)plan.value.TMM_s_iva;
                                        totalBono += (decimal)plan.value.Bono / 1024;
                                        var bonoGb = plan.value.Bono / 1024;

                                        if (plan.value.Roaming.ToLower() != "no")
                                        {
                                            roamingCount++;
                                        }

                                        <tr>
                                            <td>@plan.value.RecomendadorId</td>
                                            <td>@plan.value.Plan</td>
                                            <td>@plan.value.TMM_s_iva.ToString("n")</td>
                                            <td>@bonoGb Gb</td>
                                            <td>@plan.value.Roaming</td>
                                            <td class="editRow"><a data-toggle="modal" onclick="establisPlanToEdit(@plan.i.ToString(), @Model[0].Rut)" href="#plansModal" class="btn btn-outline-success my-2 my-sm-0">Editar</a></td>
                                        </tr>
                                    }
                                    <tr>
                                        <td class="total-column" colspan="3">
                                            $ @totalTmm
                                        </td>
                                        <td class="total-column">
                                            @totalBono Gb
                                        </td>
                                        <td class="total-column">
                                            @roamingCount
                                        </td>
                                    </tr>

                                }
                                else
                                {
                                    <tr>
                                        <td class="total-column" colspan="6">
                                            Sin datos
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </fieldset>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-5">

                <fieldset>
                    <legend>Terminales</legend>
                    <div class="row" style="height: 250px">
                        <div class="col-lg-5">

                            <form class="form-inline input-group mb-0 w-auto" action="/Home/ShowPlans" method="post">

                                <select id="movilesDdl" class="custom-select" onchange="movileChange()">
                                    <option value="0">Seleccionar</option>
                                    @foreach (var item in movileDevices)
                                    {
                                        <option value="@item.Codigo">@item.Marca</option>
                                    }

                                </select>


                            </form>
                            <div id="valuesEquipos" class="p-2 ml-2">

                                <label><b>C.Landed: </b></label><label class="ml-1" id="landedValue"></label><br />
                                <label><b>Stock: </b></label><label class="ml-1" id="stockValue"></label>

                            </div>

                        </div>
                        <div class="col-lg-7">
                            <div class="tableFixHeadDevices pr-2">
                                <table class="table table-bordered table-striped mb-0" style="border: 1px solid #ddd !important;">
                                    <thead class="thead-dark">

                                        <tr>
                                            <th scope="col">Equipo</th>
                                            <th scope="col">Lande</th>
                                            <th scope="col">Borrar</th>
                                        </tr>
                                    </thead>
                                    <tbody id="movilTableBody">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div style="display:inline; padding-left: 20px">
                            <button style=" height:40px; line-height: 8px;" class="btn btn-outline-success my-2 my-sm-0 p-3" id="addDeviceBtn" onclick="AddDevice()" disabled>Agregar</button>
                            <button style=" height:40px; line-height: 8px" class="btn btn-outline-success my-2 my-sm-0 p-3" type="submit" id="modificarEquipoBtn">Modificar</button>

                        </div>
                    </div>

                </fieldset>


            </div>

            <div class="col-lg-7">
                <fieldset>
                    <legend>Resumen</legend>
                    <div class="row" style="height: 250px">

                        <div class="col-lg-4">
                            <div class="ml-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Subsidio</span>
                                </div>
                                <input type="text" id="subsidioTxt" disabled value="0" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Payback</span>
                                </div>
                                <input type="text" id="paybackTxt" class="form-control" disabled aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Pago de equipos</span>
                                </div>
                                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                            </div>

                        </div>


                        <div class="col-lg-4 align-items-center dis-grid justify-content-center">

                            <div id="valuesResumen" class="p-2">
                                <label><b>GAP Fijo: </b></label><label class="ml-1" id="gapValue">@gapModel.FixedGap</label><br />
                                <label><b>GAP Facturación: </b></label><label class="ml-1" id="gapBilingValue">@gapModel.BillingGap</label><br />
                                <label><b>Payback: </b></label><label class="ml-1" id="paybackValue">XXX</label><br />
                                <label><b>Subsidio: </b></label><label class="ml-1" id="subsidioValue">XXX</label>
                            </div>
                        </div>

                        

                        <div class="col-lg-4">

                            @* <svg class="bi bi-check" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3.5-3.5a.5.5 0 11.708-.708L6.5 10.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd" />

            </svg>
            <P>Prueba</P>
        </div>*@

                            <button class="btn btn-outline-success generateButtons my-2 my-sm-0 p-3" type="submit" id="generarPropuestaBtn">Generar propuesta</button>
                            <button class="btn btn-outline-success generateButtons my-2 my-sm-0 p-3" type="submit" id="pdfExportBtn">Exportar Pdf</button>
                        </div>


                    </div>
                </fieldset>
            </div>

        </div>

    </div>

    @if (Model != null && Model.Count() > 4)
    {
        <script>
            $(".tableFieldset .tableFixHead").css("height", "230px");
        </script>
    }


    <div class="modal fade" id="plansModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Seleccione un plan</h4>
                </div>

                <div class="modal-body">
                    <table id="tablaPlanes">
                        <thead>
                            <tr>
                                <th>Plan</th>
                                <th>TMM</th>
                                <th>Bono</th>
                                <th>Roaming</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var plan in planOfertList.Select((value) => new { value }))
                            {
                                var bono = @plan.value.Bono_ / 1024;
                                <tr>
                                    <td>@plan.value.Plan</td>
                                    <td>@plan.value.TMM_s_iva</td>
                                    <td>@bono</td>
                                    <td>@plan.value.Roaming</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="confirmSelectPlan()" data-dismiss="modal">Seleccionar</button>
                </div>
            </div>

        </div>
    </div>




    <script src="~/js/Sugeridor/SugeridorScripts.js"></script>
</body>
</html>